{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./backend/dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "skipDefaultLibCheck": true
    },
    "include": [
        "backend/server/**/*.ts"
    ],
}